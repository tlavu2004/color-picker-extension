{
	"manifest_version": 3,
	"name": "Color Picker",
	"version": "1.0",
	"description": "Pick colors from any webpage",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "src/popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}